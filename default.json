{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "timezone": "Asia/Tokyo",
  "schedule": [
    "every weekend"
  ],
  "prConcurrentLimit": 10,
  "packageRules": [
    {
      "groupName": "webpack family",
      "matchPackagePatterns": [
        "webpack",
        "-loader$"
      ]
    }
  ]
}